<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping package="es.devcircus.hibernate_examples.relationship_one_to_many_mapping_bag.model">
 
    <class name="Department" table="department">
 
        <id name="departmentId" type="java.lang.Long" column="department_id" >
            <generator class="native" />
        </id>
         
        <property name="departmentName" column="dept_name"/>
 
        <bag name="employees" table="employee"
             inverse="true" lazy="true" fetch="select">
            <key>
                <column name="department_id" not-null="true" />
            </key>
            <one-to-many class="es.devcircus.hibernate_examples.relationship_one_to_many_mapping_bag.model.Employee" />
        </bag>
                 
    </class>
 
</hibernate-mapping>